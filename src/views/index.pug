doctype html
html(lang="en")
  head
    title= title
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie-edge')
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    if style.client
      link(rel='stylesheet', href=style.client, type='text/css' )
    if style.vendor
      link(rel='stylesheet', href=style.vendor, type='text/css' )
  body
    div#app!= html
    script(type='text/javascript').
      window.config= !{JSON.stringify(config)};
    script(src=scripts.vendor)
    script(src=scripts.client)
